.attr_value {
      float: left;
      margin-right:28rpx;
      position: relative;
}
.radio_label{
      display: block;
      padding:0 24rpx;
      height: 44rpx;
      line-height: 44rpx;
}
/*radio默认样式重置*/
radio {
      box-sizing: border-box;
      background: none;
      position: absolute;
      width: 100%;
      height: 100%;
      top:0;
      left:0;
}
 
radio .wx-radio-input {
      margin-right: 15rpx;
      position: absolute;
      width: 100%;
      height: 100%;
      top:0;
      left:0;
      background: none;
      border-radius: 6rpx;
      box-sizing: border-box;
}
 
radio .wx-radio-input.wx-radio-input-checked {
      background-color:transparent;
      border-color:#f8b700;
      overflow: hidden;
      box-sizing: border-box;
}
 
radio .wx-radio-input.wx-radio-input-checked::before {
      font-size:26rpx;
      color: #f8b700;
      top:auto;
      left:auto;
      right:-4rpx;
      bottom:-4rpx;
      transform:translate(0, 0) scale(1);
      -webkit-transform:translate(0, 0) scale(1);
}
/*radio默认样式重置*/