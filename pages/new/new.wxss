/* pages/new/new.wxss */
page{
  background: #fef9e6;
}
.tittle{
  z-index: 2;
  position: relative;
  color: #313b3d;
  width: 100%;
  height: 64rpx;
  line-height: 64rpx;
  margin: 24rpx 44rpx 0rpx 44rpx;
}
.input_box{
  background: rgba(152,148,139,.3);
  height: 80rpx;
  width: 678rpx;
  border-radius: 8rpx;
  z-index: 999;
  margin: 28rpx;
  position: relative;
}
.input{
  height: 80rpx;
  line-height: 80rpx;
  margin-left: 16rpx;
  color: #8f805f;
}
.group{
  margin: 32rpx;
}
.attr_value {
      float: left;
      margin-right:28rpx;
      position: relative;
}
.radio_label{
      display: block;
      padding:0 24rpx;
      height: 44rpx;
      line-height: 44rpx;
}
/*radio默认样式重置*/
radio {
      box-sizing: border-box;
      background: none;
      position: absolute;
      width: 100%;
      height: 100%;
      top:0;
      left:0;
}
 
radio .wx-radio-input {
      margin-right: 15rpx;
      position: absolute;
      width: 100%;
      height: 100%;
      top:0;
      left:0;
      background: none;
      border-radius: 6rpx;
      box-sizing: border-box;
}
 
radio .wx-radio-input.wx-radio-input-checked {
      background-color:transparent;
      border-color:#f8b700;
      overflow: hidden;
      box-sizing: border-box;
}
 
radio .wx-radio-input.wx-radio-input-checked::before {
      font-size:26rpx;
      color: #f8b700;
      top:auto;
      left:auto;
      right:-4rpx;
      bottom:-4rpx;
      transform:translate(0, 0) scale(1);
      -webkit-transform:translate(0, 0) scale(1);
}
/*radio默认样式重置*/
.btn{
  height: 64rpx;
  width: 240rpx;
  background: #fce98d;
  color: #313b3d;
  border-radius: 8rpx;
  position: absolute;
  margin: 120rpx 0 0 460rpx;
  text-align: center;
  line-height: 64rpx;
}