.nav{
  width: 100%;
  overflow: hidden;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 100;
  background: #313b3d;
}
.nav-title{
  width: 100%;
  color: #fff;
  height: 45px;
  line-height: 45px;
  text-align: center;
  position: absolute;
  bottom: 0;
  left: 0;
  z-index: 100;
  font-family:PingFang-SC-Medium;
  font-size:36rpx;
  letter-spacing:2px;
}
.nav .back{
  width: 22px;
  height: 22px;
  position: absolute;
  bottom: 0;
  left: 0;
  padding: 10px 15px;
}
.top{
  background: #313b3d;
  height: 160rpx;
  width: 100%;
  display: flex;
}
.detail{
  height: 160rpx;
  width: 33.3%;
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.money{
  text-align: center;
}
.number{
  color: #fff;
  font-size: 44rpx;
  line-height: 50rpx;
}
.na{
  color: #ccc;
  font-size: 24rpx;
}
.container{
  background: #fef9e6;
  height: 164rpx;
  width: 100%;
  align-items: center;
  display: flex;
}
.box{
  width: 25%;
  display: grid;
  align-items: center;
  justify-content: center;
}
.icon{
  height: 64rpx;
  width: 64rpx;
}
.title{
  font-size: 28rpx;
  margin-top: 16rpx;
  text-align: center;
  color: #313b3d;
}

.auction{
  width: 100%;
  height: 144rpx;
  background: #fef9e6;
  margin-top: 24rpx;
  display: flex;
}
.img{
  height: 96rpx;
  width: 96rpx;
  margin: 24rpx;
}
.prise{
  position: absolute;
  margin: 20rpx 0 0 144rpx;
}
.title{
  font-size: 24rpx;
  color: #313b3d;
}
.num{
  font-size: 30rpx;
  color: #313b3d;
}
.time{
  position: absolute;
  margin: 20rpx 0 0 500rpx;
}
.name{
  position: absolute;
  margin: 88rpx 0 0 144rpx;
  font-size: 30rpx;
  color: #313b3d;
}
.btn{
  height: 48rpx;
  width: 196rpx;
  background: #fce98d;
  color: #313b3d;
  border-radius: 8rpx;
  position: absolute;
  margin: 88rpx 0 0 500rpx;
  text-align: center;
  line-height: 48rpx;
}